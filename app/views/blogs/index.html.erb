<h1>Blogs List</h1>

<table border="1">
  <thead>
    <tr>
      <th>ID</th>
      <th>Title</th>
      <th>Content</th>
      <th>Written By</th>
    </tr>
  </thead>

  <tbody>
    <% @blogs.each do |blog| %>
      <tr>
        <td><%= blog.id %></td>
        <td><%= blog.title %></td>
        <td><%= blog.content %></td>
        <td><%= blog.student.first_name %></td>
      </tr>
    <% end %>
  </tbody>
</table>
