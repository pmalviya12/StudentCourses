<%= link_to "Create New Student", new_student_path, class: "btn btn-primary btn-lg" %>
<div class = "col-lg-8">
<h1>Student List</h1>

<table class = "table table-bordered">
  <thead>
    <tr>
      <th>ID</th>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Age</th>
      <th>Contact Number</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.id %></td>
        <td><%= link_to student.first_name, student_path(student) %></td>
        <td><%= student.last_name %></td>
        <td><%= student.date_of_birth %></td>
        <td><%= student.permanent_contact_number %></td>
        <td>
          <%= link_to 'Edit', edit_student_path(student) %> |
          <%= link_to 'Show', student_path(student) %> |
          <%= link_to 'Delete', student_path(student), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
