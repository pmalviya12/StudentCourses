<%= link_to "Create New Student", new_admin_student_path, class: "btn btn-primary" %>
<div class = "col-lg-8">
<h1>Student List</h1>

<table class = "table table-bordered">
  <thead>
    <tr>
      <th>ID</th>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Contact Number</th>
      <th colspan="5">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.id %></td>
        <td><%= link_to student.first_name, admin_student_path(student) %></td>
        <td><%= student.last_name %></td>
        <td><%= student.permanent_contact_number %></td>
        <td class="d-flex gap-2">
            <%= link_to 'Edit', edit_admin_student_path(student), class: "btn btn-primary btn-sm" %>
            <%= link_to 'Show', admin_student_path(student), class: "btn btn-secondary btn-sm" %>
            <%= button_to "Delete", admin_student_path(student), method: :delete, class: "btn btn-danger btn-sm d-inline" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<div class="pagination">
  <%= will_paginate @students %>
</div>
