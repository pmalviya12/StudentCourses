<%= link_to "New Course", new_course_path, class: "btn btn-primary" %>
<div class = "col-lg-8">
<h1>Courses</h1>

<table class = "table table-bordered">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Status</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.id %></td>
        <td><%= course.name %></td>
        <td><%= course.status %></td>
        <td class="d-flex gap-2">
            <%= link_to 'Edit', edit_course_path(course), class: "btn btn-primary btn-sm" %>
            <%= link_to 'Show', course_path(course), class: "btn btn-secondary btn-sm" %>
            <%= button_to "Delete", course_path(course), method: :delete, class: "btn btn-danger btn-sm d-inline" %>
        </td>

      </tr>
    <% end %>
  </tbody>
</table>
</div>

<div class="pagination">
  <%= will_paginate @courses %>
</div>